<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/pkmnsImgView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
    />

    <TextView
            android:id="@+id/pkmnsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/pkmnsImgView"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"
            android:text="Pokemon"/>

    <TextView
            android:id="@+id/pkmnsNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/pkmnsImgView"
            android:layout_below="@+id/pkmnsName"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            />

    <TextView
            android:id="@+id/pkmnsType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/pkmnsImgView"
            android:layout_below="@+id/pkmnsNumber"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"/>



</RelativeLayout>